{
  "name": "Gafaelfawr",
  "private": true,
  "description": "The user-facing UI for Gafaelfawr",
  "version": "2.0.0",
  "license": "MIT",
  "scripts": {
    "build": "gatsby build",
    "develop": "gatsby develop",
    "format": "prettier --write \"**/*.{json,css,graphql,yaml}\"",
    "format:check": "prettier --check \"**/*.{json,css,graphql,yaml}\"",
    "start": "npm run develop",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "test": "echo \"Write tests! -> https://gatsby.dev/unit-testing\" && exit 1",
    "lint": "eslint *.js src",
    "lint:fix": "eslint *.js src --fix"
  },
  "dependencies": {
    "date-fns": "^2.17.0",
    "formik": "^2.2.5",
    "gatsby": "^2.32.8",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-aria-modal": "^4.0.0",
    "react-datepicker": "^3.5.0",
    "react-dom": "^16.12.0",
    "react-icons": "^4.2.0",
    "react-is": "^17.0.1",
    "react-table": "^7.6.3",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-config-wesbos": "^1.0.1",
    "eslint-plugin-html": "^6.1.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.1.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lsst-sqre/gafaelfawr"
  },
  "bugs": {
    "url": "https://github.com/lsst-sqre/gafaelfawr/issues"
  },
  "eslintConfig": {
    "extends": [
      "wesbos"
    ],
    "rules": {
      "jsx-a11y/label-has-associated-control": [
        2,
        {
          "controlComponents": [
            "Field"
          ]
        }
      ]
    }
  }
}
